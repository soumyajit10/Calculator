<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/border"
    android:padding="5dp"
    android:weightSum="10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/other_btn"
        android:text="47"
        android:id="@+id/txt_sec"
        android:textColor="@color/bright_yellow"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="47"
        android:textColor="@color/bright_yellow"
        android:textSize="50sp"
        android:id="@+id/txt_main"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:background="@drawable/custom_btn"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_ac"
                        android:text="AC"
                        android:textSize="23sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/brick_red"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_c"
                        android:text="C"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_green"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_b1"
                        android:text="("
                        android:textSize="20sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_b2"
                        android:text=")"
                        android:textSize="20sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_pi"
                        android:text="π"
                        android:textAllCaps="false"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_sin"
                        android:text="sin"
                        android:layout_margin="3dp"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_cos"
                        android:text="cos"
                        android:gravity="start|center"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_tan"
                        android:text="tan"
                        android:layout_margin="3dp"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_log"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_ln"
                        android:text="ln"
                        android:layout_margin="3dp"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_fact"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:elevation="20dp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_square"
                        android:text="x²"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:elevation="20dp"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:elevation="20dp"
                        android:id="@+id/btn_root"
                        android:textAllCaps="false"
                        android:text="√"
                        android:textSize="18sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:elevation="20dp"
                        android:id="@+id/btn_inverse"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:background="@drawable/other_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_divide"
                        android:text="÷"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@color/dark_yellow"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b7"
                        android:text="7"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b8"
                        android:layout_margin="3dp"
                        android:text="8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b9"
                        android:text="9"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_multi"
                        android:text="×"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@color/dark_yellow"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b4"
                        android:text="4"
                        android:textSize="25sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b5"
                        android:background="@drawable/custom_btn"
                        android:layout_margin="3dp"
                        android:text="5"
                        android:textSize="25sp"
                        android:textColor="@color/bright_yellow"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b6"
                        android:text="6"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_minus"
                        android:text="-"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:background="@color/dark_yellow"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b1"
                        android:layout_margin="3dp"
                        android:text="1"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b2"
                        android:layout_margin="3dp"
                        android:text="2"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b3"
                        android:text="3"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_add"
                        android:text="+"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:background="@color/dark_yellow"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b00"
                        android:text="00"
                        android:layout_margin="3dp"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/b0"
                        android:text="0"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/yellow"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/bPoint"
                        android:text="."
                        android:textAlignment="center"
                        android:layout_margin="3dp"
                        android:textSize="25sp"
                        android:background="@drawable/custom_btn"
                        android:textColor="@color/bright_pink"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btn_equal"
                        android:text="="
                        android:textSize="25sp"
                        android:background="@color/dark_yellow"
                        android:layout_margin="3dp"
                        android:textColor="@color/bright_pink"/>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>